    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/cardstyle10"
        android:fontFamily="@font/lalezarfont"
        android:gravity="center"
        android:text="وین مانی"
        android:textColor="@color/yellow"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infos_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="#B9000000"
        android:fontFamily="@font/lalezarfont"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="با شرکت در لیگ حدس تصویر برنده جایزه های میلیونی شو"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/percent_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lalezarfont"
        android:gravity="center"
        android:text="0%"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/progressBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infos_splash"
        app:layout_constraintVertical_bias="0.956" />

    <com.mackhartley.roundedprogressbar.RoundedProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rpbBackgroundColor="#39E6E4D5"
        app:rpbCornerRadius="20dp"
        app:rpbProgressColor="#FFC107"
        app:rpbShowProgressText="false" />


</androidx.constraintlayout.widget.ConstraintLayout>