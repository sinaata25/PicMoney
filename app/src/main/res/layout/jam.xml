<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="@drawable/moneyback"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="8dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/cardstyle5"
            android:orientation="vertical"
            android:layout_height="match_parent">




                <ImageView
                  android:layout_width="100dp"
                  android:src="@drawable/picture"
                  android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/lalezarfont"
                android:textSize="30dp"
                android:text="لیگ حدس تصویر"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:layout_marginLeft="4dp"
                    android:text="رتبه شما:"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:text="مشاهده جدول رتبه ها"
                android:fontFamily="@font/lalezarfont"
                android:textSize="25dp"
                android:id="@+id/btn_hads"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/cardstyle8"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="8dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/cardstyle11"
            android:orientation="vertical"
            android:layout_height="match_parent">




            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/choose"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/lalezarfont"
                android:textSize="30dp"
                android:text="لیگ چهارگزینه ای"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:layout_marginLeft="4dp"
                    android:text="رتبه شما:"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:text="مشاهده جدول رتبه ها"
                android:fontFamily="@font/lalezarfont"
                android:textSize="25dp"
                android:id="@+id/btn_char"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/cardstyle8"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="8dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/cardstyle12"
            android:orientation="vertical"
            android:layout_height="match_parent">




            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/stopwatch"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/lalezarfont"
                android:textSize="30dp"
                android:text="لیگ سرعتی"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/lalezarfont"
                    android:textSize="30dp"
                    android:layout_marginLeft="4dp"
                    android:text="رتبه شما:"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:text="مشاهده جدول رتبه ها"
                android:fontFamily="@font/lalezarfont"
                android:textSize="25dp"
                android:id="@+id/btn_sorat"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/cardstyle8"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>










    </LinearLayout>
</ScrollView>

</LinearLayout>